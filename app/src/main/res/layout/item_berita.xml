<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/view_background"
        android:background="#e74c3c"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
      >
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/deleteIcon"
            android:layout_marginRight="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete_white"
            android:layout_alignParentRight="true">
        </ImageView>
        <TextView
            android:fontFamily="@font/segoe_ui_font"
            android:layout_centerVertical="true"
            android:textSize="14dp"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_toLeftOf="@id/deleteIcon"
            ></TextView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/view_foregound"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="5dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="208dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ganjar Minta Menteri Ubah Sistem Zonasi pada PPDB Online"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:text="SEMARANG â€“ Persoalan Penerimaan Peserta Didik Baru (PPDB) online 2019 untuk SMA/SMK menuai blistBeritaak protes dari masyarakat."
                android:textSize="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_time" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="Juni 30, 2019"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>